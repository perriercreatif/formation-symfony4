{% extends 'admin/base.html.twig' %}

{% block title %}Modifier de l'utilisateur {{ user.fullName }}{% endblock %}
{% form_theme form _self %}
{% block body %}
    <div class="container-fluid">
        <h1 class="my-5">Récapitulatif de l'utilisateur : <br>{{ user.fullName }}</h1>
        <div class="alert bg-info">
            <strong>Email : </strong>{{ user.email }}<br>
            <strong>Annonces : </strong>{{ user.ads | length }}<br>
            <strong>Réservation : </strong>{{ user.bookings | length }}
        </div>
        {{ form_start(form) }}

        <div class="row">
            <div class="col">
                <div class="card bg-light">
                    <div class="card-header">
                        <h4 class="card-title">Modifier le commentaire ?</h4>
                    </div>
                    <div class="card-body">
                        {{ form_widget(form) }}
                        <button type="submit" class="btn btn-primary float-right">
                            <i class="fas fa-save"></i>
                            Enregistrer les modifications
                        </button>
                    </div>
                </div>
            </div>
        </div>

        {{ form_end(form) }}
    </div>
{% endblock %}