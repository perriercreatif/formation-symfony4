{% extends 'admin/base.html.twig' %}

{% block title %}Modifier du commentaire n°{{ comment.id }}{% endblock %}
{% form_theme form _self %}
{% block body %}
    <div class="container-fluid">
        <h1 class="my-5">Modifier du commentaire : <br>{{ comment.author.fullName }}</h1>
        <div class="alert bg-info">
            <strong>Annonce liée : </strong>{{ comment.ad.title }}<br>
            <strong>Auteur : </strong>{{ comment.author.fullName }}<br>
            <strong>Date de création : </strong>{{ comment.createdAt | date('d/m/Y H:i') }}<br>
            <strong>Note donnée : </strong>{{ comment.rating }}
        </div>
        {{ form_start(form) }}

        <div class="row">
            <div class="col">
                <div class="card bg-light">
                    <div class="card-header">
                        <h4 class="card-title">Modifier le commentaire ?</h4>
                    </div>
                    <div class="card-body">
                        {{ form_widget(form) }}
                        <button type="submit" class="btn btn-primary float-right">
                            <i class="fas fa-save"></i>
                            Enregistrer les modifications
                        </button>
                    </div>
                </div>
            </div>
        </div>

        {{ form_end(form) }}
    </div>
{% endblock %}