{% extends 'admin/base.html.twig' %}

{% block title %}Modifier de la réservation n°{{ booking.id }}{% endblock %}
{% form_theme form _self %}
{% block body %}
    <div class="container-fluid">
        <h1 class="my-5">Modifier de la réservation : <br>{{ booking.booker.fullName }}</h1>
        <div class="alert bg-info">
            <strong>Annonce liée : </strong>{{ booking.ad.title }}<br>
            <strong>Auteur : </strong>{{ booking.booker.fullName }}<br>
            <strong>Date de création : </strong>{{ booking.createdAt | date('d/m/Y H:i') }} <br>
            <strong>Durée : </strong>{{ booking.duration }}<br>
            <strong>Montant : </strong>{{ booking.amount | number_format(2, ',', '') }}
        </div>
        {{ form_start(form) }}

        <div class="row">
            <div class="col">
                <div class="card bg-light">
                    <div class="card-header">
                        <h4 class="card-title">Modifier le commentaire sur cette réservation ?</h4>
                    </div>
                    <div class="card-body">
                        {{ form_widget(form) }}
                        <button type="submit" class="btn btn-primary float-right">
                            <i class="fas fa-save"></i>
                            Enregistrer les modifications
                        </button>
                    </div>
                </div>
            </div>
        </div>

        {{ form_end(form) }}
    </div>
{% endblock %}